{
  "compilerOptions": {
    "target": "es6", // or a higher version
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "isolatedModules": false
  },
  "include": [
    "src/**/*",
    "swagger.json"
  ], // Ensure swagger.json is included
  "exclude": [
    "node_modules"
  ]
}